{
  "compilerOptions": {
    "baseUrl": ".",
    // "types": ["leaflet"],
    "paths": {
      "@/*": ["./*"],      // Maps "@/" to the root directory
      "@/lib/*": ["lib/*"],  // Maps "@/lib/" to "lib/"
      "~/*": ["./*"]    //Example alias
      // "moduleResolution": "node" // Remove this line; it's not a valid "paths" property
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // This is the correct place for moduleResolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

